<h1 class='title'>
  チーム検索
</h1>
<%= search_form_for @p, url: teams_search_path do |f| %>
  <div class='search-content' >
    <div class='search-pulldown'>
      <%= f.label :prefecture_id_eq, '都道府県' %>
      <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name,  include_blank: '指定なし' %>
    </div>
    <div class='search-pulldown'>
      <%= f.label :age_id_eq, 'メンバー平均年齢' %>
      <%= f.collection_select :age_id_eq, Age.all, :id, :name,  include_blank: '指定なし' %>
    </div>
    <div class='search-pulldown'>
      <%= f.label :frequency_id_eq, '活動頻度' %>
      <%= f.collection_select :frequency_id_eq, Frequency.all, :id, :name,  include_blank: '指定なし' %>
    </div>
    <div class='search-pulldown'>
      <%= f.label :level_id_eq, '要求する野球レベル' %>
      <%= f.collection_select :level_id_eq, Level.all, :id, :name,  include_blank: '指定なし' %>
    </div>

    <br>
      <%= f.submit '検索'%>
    <br>
  </div>

  <% @teams.each do |team| %>
  <td>
  <br>
    <%= link_to team_path(team.id), method: :get, class: 'team_derail' do %>
  <li class="team-index">
  <%= image_tag team.teamimage , class: "team-img" %>
    <div class='team-info'>
      <div class="team-detail">
      <%= team.teamname %>
      </div>
      <div class="team-detail">
      <%= team.prefecture.name %>
      </div>
      <div class="team-detail">
      <%= team.age.name %>
      </div>
      <div class="team-detail">
      <%= team.frequency.name %>
      </div>
      <div class="team-detail">
      <%= team.level.name %>
      </div>
    </div>
  </li>
  <% end %>
  <% end %>
<% end %>