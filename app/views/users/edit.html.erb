<%= render "shared/second-header"%>
<%= form_with model: @user, url: user_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  <% if @user.errors.any? %>
  <%= render 'shared/error_messages', model: f.object %>    
  <% end %>
  <div class="img-upload">
    <div class="weight-bold-text">
      登録画像
      <span class="indispensable">必須</span>
    </div>
    <div class="click-upload">
     <p>
       クリックしてファイルをアップロード
      </p>
     <%= f.file_field :avatar, id:"item-image" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :name, class:"input-name", id:"last-name", placeholder:"例) 山田太郎" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダタロウ" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

  <div class="items-detail">
      <div class="form">
      <%= form_with(model: @user, url:new_user_registration_path, local: true) do |f| %>
        <div class="weight-bold-text">
          野球歴
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:term_id, Term.all, :id, :name, {}, {class:"select-box", id:"item-scheduled-delivery"}) %>
        <div class="weight-bold-text">
          希望する野球レベル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:level_id, Level.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
        <div class="weight-bold-text">
          希望活動頻度
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:frequency_id, Frequency.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
        <div class="weight-bold-text">
          選手登録希望
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:registration_id, Registration.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
        <div class="weight-bold-text">
          お住まいの都道府県
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
      </div>
    </div>
    <% end %>

  <div class="form-group">
    <div class='form-text-wrap'>
        <label class="form-text">市区町村</label>
        <span class="indispensable">必須</span>
      </div>
    <div class='input-name-wrap'>
      <%= f.text_area :city, class:"input-name", id:"last-name", placeholder:"例) 新宿区" %>
    </div>
      <div class='form-text-wrap'>
        <label class="form-text">野球実績</label>
      </div>
    <div class='input-name-wrap'>
      <%= f.text_area :achievement, class:"input-name", id:"last-name", placeholder:"例) 全国大会出場経験あり" %>
    </div>
  </div>

  <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      「会員登録」のボタンを押すことにより
      <span>利用規約</span>
      <br>に同意したものとみなします
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
  <p class='register-info'>本人情報の登録について</p>
</div>
<% end %>

<%= render "shared/second-footer"%>